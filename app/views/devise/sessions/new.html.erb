  <div class="signup-banner signupb" style="background-image: url( <%=image_path('https://res.cloudinary.com/dqssam2go/image/upload/v1543399710/mike-erskine-144525-unsplash.jpg')%>);">
    <div class="join-container">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" }, placeholder: "Email", label: false %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" }, placeholder: "Password", label: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">

          <%= f.button :submit, "Log in",class: "next-button" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

