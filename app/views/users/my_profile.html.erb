<div class="profile-infos">
  <%= render 'shared/banner' %>
  <% if @user.photo.present? %>
  <%= image_tag @user.photo.url(:bright_face), class: "avatar" %>
  <% else %>
  <div class="avatar-placeholder">
    <h1><%= @user.first_name.first.upcase %><%= @user.last_name.first.upcase %></h1>
  </div>
  <% end %>
</div>
<div id="accordion">
  <!-- Only shows if current_user.role == coordinator -->
  <% if current_user.role == "coordinator" %>
  <div class="accordion">
    <input type="radio" name="radacc" class="accordian-chk" / >
    <h3 class="accordian-header">
      Driver
      <span class="acc-icon"></span>
    </h3>
    <div class="accordian-content">
      <button type="button" class="btn-s" data-toggle="modal" data-target="#eventModal">
        Create Event
      </button>
      <!-- Modal -->
      <div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Create Event</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!-- Driver input ends -->
  <!-- Profile starts -->
  <div class="accordion">
    <input type="radio" name="radacc" class="accordian-chk" />
    <h3 class="accordian-header">
      Profile
      <span class="acc-icon"></span>
    </h3>
    <div class="accordian-content" tabindex="2">
      <form action="/flats", method='post' class="form-container">
        <textarea name="message" placeholder="Placeholder" rows="3" cols="90" class="text-area"></textarea>
        <label class="label" for="city">CITY</label><br>
        <input placeholder="Berlin" type="text" name="city" class="form-body"><br>
        <input placeholder="â‚¬ 70 per/night" type="text" name="price" class="form-body"><br>
        <input placeholder="4 people" type="text" name="guests" class="form-body"><br>

        <select name="myFruit">
          <option>Select</option>
          <option>Cherry</option>
          <option>Lemon</option>
          <option>Banana</option>
          <option>Strawberry</option>
          <option>Apple</option>
        </select>


        <div class="button-form">
          <input type="submit" value="Search" class="s-button">
        </div>
      </form>
    </div>
  </div>
  <!-- Profile ends -->
  <!-- Calendar starts -->
  <div class="accordion">
    <input type="radio" name="radacc" class="accordian-chk" checked / >
    <h3 class="accordian-header">
      Calendar
      <span class="acc-icon"></span>
    </h3>
    <div class="accordian-content">
      <%= render template: "events/index" %>
    </div>
  </div>
  <!-- Calendar ends -->
</div>
