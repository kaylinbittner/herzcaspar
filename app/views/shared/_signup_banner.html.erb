<div class="signup-container">
  <div class="signup-banner signupb" style="background-image: url( <%=image_path('https://res.cloudinary.com/dqssam2go/image/upload/v1543399710/mike-erskine-144525-unsplash.jpg')%>);">
    <div class="join-container">
     <div class="circles">
      <div class="circle circle-margin blue-circle">
        1
      </div>
      <div class="circle circle-margin">
        2
      </div>
      <div class="circle">
        3
      </div>
    </div>
    <h1 class="join-main-header"><strong class="home-header">Join</strong><br> the team</h1>

    <div class="registration-form"><%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :first_name,
        required: true,
        input_html: { autocomplete: "first-name" }, placeholder: "First Name", label: false%>
        <%= f.input :last_name,
        required: true,
        input_html: { autocomplete: "last-name" }, placeholder: "Last Name", label: false%>
        <%= f.input :email, required: true,
        autofocus: true ,
        input_html: { autocomplete: "email" }, placeholder: "Email", label: false%>
        <%= f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" },  placeholder: "Password", label: false %>
        <%= f.input :password_confirmation,
        required: true,
        input_html: { autocomplete: "new-password" }, placeholder: "Confirm Password", label: false%>
        <div class="form-actions">
          <%= f.button :submit, value= "NEXT", class: "next-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
