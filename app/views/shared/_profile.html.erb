<div class="card-container">
  <div class="profile text-center">
    <div class="main">
      <div class="main-content">
        <% if user.photo.present? %>
          <%= image_tag user.photo.url(:bright_face), class: "avatar" %>
        <% else %>
        <div class="avatar-placeholder-navbar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <h1>
            <%= user.email.first.upcase %>
          </h1>
        </div>
        <% end %>
        <h2><span class="profile-name"><%= user.first_name %> <%= user.last_name %></span></h2>
        <p>Member of the Caspar comunity since: <span class="profile-created_at"><%=  user.created_at.strftime("%m/%d/%Y") %></span></p>
        <%= link_to 'Update', edit_user_path(current_user.id), remote: true, class: "next-button"%>
      </div>
    </div>
    <% user.interests.each do |interest| %>
      <div class="card" style="background-image: linear-gradient(174deg, transparent 0%, rgba(0, 0, 0, 0.43) 60%), url(<%=image_path(interest.photo)%>); background-size: cover;  opacity: 0.85;">

        <div class="card-content">
          <h3><b><font color="white"><%= interest.area %></font></b></h3>
          <p><font color="white"><%= interest.variant %></font></p>
        </div>
      </div>
     <% end %>


    <div class="description">
      <div class="description-content">
        <h3>More about yourself <%#= user.first_name %> <%#= user.last_name %></h3>
        <p class="text-justify">
          <%= user.bio %>
        </p>
      </div>
    </div>
  </div>
  <div id="editUser"></div>
</div>
